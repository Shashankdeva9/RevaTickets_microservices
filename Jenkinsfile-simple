pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_HUB_REPO = 'shashank092'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shashankdeva9/RevaTickets_microservices.git'
            }
        }
        
        stage('Build Services') {
            parallel {
                stage('Build Eureka JAR') {
                    steps {
                        dir('microservices/eureka-server') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build API Gateway JAR') {
                    steps {
                        dir('microservices/api-gateway') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build User Service JAR') {
                    steps {
                        dir('microservices/user-service') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Movie Service JAR') {
                    steps {
                        dir('microservices/movie-service') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Venue Service JAR') {
                    steps {
                        dir('microservices/venue-service') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Booking Service JAR') {
                    steps {
                        dir('microservices/booking-service') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Payment Service JAR') {
                    steps {
                        dir('microservices/payment-service') {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Images') {
            parallel {
                stage('Build Eureka') {
                    steps {
                        dir('microservices/eureka-server') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-eureka-server .'
                        }
                    }
                }
                stage('Build API Gateway') {
                    steps {
                        dir('microservices/api-gateway') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-api-gateway .'
                        }
                    }
                }
                stage('Build User Service') {
                    steps {
                        dir('microservices/user-service') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-user-service .'
                        }
                    }
                }
                stage('Build Movie Service') {
                    steps {
                        dir('microservices/movie-service') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-movie-service .'
                        }
                    }
                }
                stage('Build Venue Service') {
                    steps {
                        dir('microservices/venue-service') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-venue-service .'
                        }
                    }
                }
                stage('Build Booking Service') {
                    steps {
                        dir('microservices/booking-service') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-booking-service .'
                        }
                    }
                }
                stage('Build Payment Service') {
                    steps {
                        dir('microservices/payment-service') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-payment-service .'
                        }
                    }
                }
                stage('Build Frontend') {
                    steps {
                        dir('frontend') {
                            bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-frontend .'
                        }
                    }
                }
            }
        }
        
        stage('Login to Docker Hub') {
            steps {
                bat 'echo %DOCKER_HUB_CREDENTIALS_PSW% | docker login -u %DOCKER_HUB_CREDENTIALS_USR% --password-stdin'
            }
        }
        
        stage('Push Images') {
            parallel {
                stage('Push Eureka') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-eureka-server'
                    }
                }
                stage('Push API Gateway') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-api-gateway'
                    }
                }
                stage('Push User Service') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-user-service'
                    }
                }
                stage('Push Movie Service') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-movie-service'
                    }
                }
                stage('Push Venue Service') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-venue-service'
                    }
                }
                stage('Push Booking Service') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-booking-service'
                    }
                }
                stage('Push Payment Service') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-payment-service'
                    }
                }
                stage('Push Frontend') {
                    steps {
                        bat 'docker push %DOCKER_HUB_REPO%/revtickets-frontend'
                    }
                }
            }
        }
    }
    
    post {
        always {
            bat 'docker logout'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}