pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_HUB_REPO = 'shashank092'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shashankdeva9/RevaTickets_microservices.git'
            }
        }
        
        stage('Build and Push Frontend') {
            steps {
                dir('frontend') {
                    bat 'docker build -t %DOCKER_HUB_REPO%/revtickets-frontend .'
                }
            }
        }
        
        stage('Login to Docker Hub') {
            steps {
                bat 'echo %DOCKER_HUB_CREDENTIALS_PSW% | docker login -u %DOCKER_HUB_CREDENTIALS_USR% --password-stdin'
            }
        }
        
        stage('Push Frontend') {
            steps {
                bat 'docker push %DOCKER_HUB_REPO%/revtickets-frontend'
            }
        }
    }
    
    post {
        always {
            bat 'docker logout'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}