pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'your-docker-registry'  // Update with your Docker Hub username or registry
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials'  // Jenkins credentials ID
        GIT_CREDENTIALS_ID = 'git-credentials'
        MYSQL_PASSWORD = 'abc@123'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from Git...'
                git branch: 'main', 
                    credentialsId: "${GIT_CREDENTIALS_ID}",
                    url: 'https://github.com/Shashankdeva9/RevaTickets_microservices.git'
            }
        }
        
        stage('Build Microservices') {
            parallel {
                stage('Build Eureka Server') {
                    steps {
                        dir('microservices/eureka-server') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build API Gateway') {
                    steps {
                        dir('microservices/api-gateway') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build User Service') {
                    steps {
                        dir('microservices/user-service') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Movie Service') {
                    steps {
                        dir('microservices/movie-service') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Venue Service') {
                    steps {
                        dir('microservices/venue-service') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Booking Service') {
                    steps {
                        dir('microservices/booking-service') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
                stage('Build Payment Service') {
                    steps {
                        dir('microservices/payment-service') {
                            sh 'mvn clean package -DskipTests'
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    echo 'Building Docker images...'
                    
                    // Build all microservice images
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-eureka:latest ./microservices/eureka-server'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-gateway:latest ./microservices/api-gateway'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-user:latest ./microservices/user-service'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-movie:latest ./microservices/movie-service'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-venue:latest ./microservices/venue-service'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-booking:latest ./microservices/booking-service'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-payment:latest ./microservices/payment-service'
                    sh 'docker build -t ${DOCKER_REGISTRY}/revtickets-frontend:latest ./frontend'
                }
            }
        }
        
        stage('Push Docker Images') {
            steps {
                script {
                    echo 'Pushing Docker images to registry...'
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-eureka:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-gateway:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-user:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-movie:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-venue:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-booking:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-payment:latest'
                        sh 'docker push ${DOCKER_REGISTRY}/revtickets-frontend:latest'
                    }
                }
            }
        }
        
        stage('Deploy with Docker Compose') {
            steps {
                script {
                    echo 'Deploying application with Docker Compose...'
                    
                    // Stop existing containers
                    sh 'docker-compose -f docker-compose-full.yml down || true'
                    
                    // Start new containers
                    sh 'docker-compose -f docker-compose-full.yml up -d'
                    
                    // Wait for services to be healthy
                    echo 'Waiting for services to be healthy...'
                    sleep(time: 60, unit: 'SECONDS')
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    echo 'Performing health checks...'
                    
                    // Check Eureka
                    sh 'curl -f http://localhost:8761/actuator/health || exit 1'
                    
                    // Check API Gateway
                    sh 'curl -f http://localhost:9090/actuator/health || exit 1'
                    
                    // Check Frontend
                    sh 'curl -f http://localhost:4200 || exit 1'
                    
                    echo 'All services are healthy!'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
            echo 'Application is running at:'
            echo '  - Frontend: http://localhost:4200'
            echo '  - API Gateway: http://localhost:9090'
            echo '  - Eureka Dashboard: http://localhost:8761'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
            sh 'docker-compose -f docker-compose-full.yml logs'
        }
        always {
            echo 'Cleaning up...'
            sh 'docker system prune -f'
        }
    }
}
